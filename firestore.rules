rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    function isParticipant(id) {
      return request.auth != null && id.matches('.*' + request.auth.uid + '.*');
    }
    // Règles pour les utilisateurs
    match /users/{userId} {

      // Lecture publique des profils utilisateurs
      allow read: if true;

      // Écriture uniquement par l'utilisateur propriétaire
      allow write: if isOwner(userId);
      
      // Règles pour les scores des utilisateurs
      match /scores/{gameId} {

        // Lecture publique des scores
        allow read: if true;
        
        // Écriture uniquement par l'utilisateur propriétaire
        allow write: if isOwner(userId);
      }

      // Règles pour la liste d'amis de l'utilisateur
      match /friends/{friendId} {
        // Lecture/écriture réservées au propriétaire du document parent
        allow read, create, update, delete: if isOwner(userId);
      }

      // Règles pour la liste des utilisateurs bloqués
      match /blocked/{blockedId} {
        // Lecture/écriture réservées au propriétaire du document parent
        allow read, create, update, delete: if isOwner(userId);
      }

      // Règles pour les consentements (journalisation RGPD)
      match /consents/{consentId} {
        allow read, create, update, delete: if isOwner(userId);
      }
    }
    // Chats privés entre deux utilisateurs: chemin 'chats/{uidA_uidB}/messages/{messageId}'
    match /chats/{chatId} {
      allow read, write: if isParticipant(chatId);
      match /messages/{messageId} {
        allow read, write: if isParticipant(chatId);
      }
    }
    
    // Règles pour les classements globaux
    match /leaderboards/{gameId} {
      // Lecture publique des classements
      allow read: if true;
      // Écriture uniquement par les utilisateurs authentifiés
      allow write: if request.auth != null;
    }
    
    // Règles pour les statistiques globales
    match /globalStats/{statId} {
      // Lecture publique des statistiques
      allow read: if true;
      // Écriture uniquement par les utilisateurs authentifiés
      allow write: if request.auth != null;
    }

    // Archivage RGPD retiré: anonymisation directement dans /users/{userId}
  }
} 